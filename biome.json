{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/package.json",
			"!**/test-report.xml",
			"!**/dist",
			"!**/node_modules",
			"!**/coverage"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
