{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"files": {
		"ignore": [
			"package.json",
			"test-report.xml",
			"dist",
			"node_modules",
			"coverage"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
