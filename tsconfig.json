{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,

    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*.ts"]
}
