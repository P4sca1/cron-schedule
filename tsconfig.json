{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,

    "target": "es2018", // ES2019 is 100% supported in node.js 10.13.

    "module": "commonjs", // Node.js does not yet support es-modules.
    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,

    "importsNotUsedAsValues": "error"
  },
  "include": [
    "src/**/*.ts"
  ]
}
  