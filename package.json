{
  "name": "cron-schedule",
  "repository": {
    "type": "git",
    "url": "https://github.com/P4sca1/cron-schedule.git"
  },
  "author": "P4sca1 <sthamer.pascal@gmail.com>",
  "contributors": [
    "Airfooox <konstantin.zisiadis@st.ovgu.de>"
  ],
  "main": "dist/index.js",
  "browser": "dist/cron-schedule.min.js",
  "unpkg": "dist/cron-schedule.min.js",
  "files": [
    "dist/**/*.js"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build:node": "tsc --project ./tsconfig.json",
    "build:browser": "esbuild --bundle --outfile=dist/cron-schedule.min.js --sourcemap --target=es6 --platform=browser --format=iife --global-name=cronSchedule --minify src/index.ts",
    "build": "rimraf ./dist && yarn build:node && yarn build:browser",
    "ts-check": "tsc --project ./tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint-fix": "eslint --fix \"src/**/*.ts\"",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@commitlint/prompt-cli": "11.0.0",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "@typescript-eslint/typescript-estree": "4.3.0",
    "esbuild": "0.7.8",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-security": "1.4.0",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "tslib": "2.0.1",
    "typescript": "4.0.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
