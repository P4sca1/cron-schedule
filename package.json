{
  "name": "cron-schedule",
  "description": "A zero-dependency cron parser and scheduler for Node.js and the browser.",
  "version": "2.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/P4sca1/cron-schedule.git"
  },
  "author": "P4sca1 <sthamer.pascal@gmail.com>",
  "contributors": [
    "Airfooox <konstantin.zisiadis@st.ovgu.de>"
  ],
  "keywords": [
    "cron",
    "schedule",
    "typescript",
    "job",
    "parser",
    "interval",
    "iterator"
  ],
  "main": "./dist/cron-schedule.cjs.min.js",
  "module": "./dist/cron-schedule.esm.min.js",
  "unpkg": "dist/cron-schedule.iife.min.js",
  "exports": {
    "require": "./dist/cron-schedule.cjs.min.js",
    "import": "./dist/cron-schedule.esm.min.js"
  },
  "files": [
    "./dist/**/*.js",
    "./dist/**/*.js.map",
    "./dist/**/*.d.ts"
  ],
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf ./dist && tsc -p ./tsconfig.json --emitDeclarationOnly && node build.js",
    "ts-check": "tsc --project ./tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint-fix": "eslint --fix \"src/**/*.ts\"",
    "test": "jest -c jest.config.js",
    "test:watch": "jest -c jest.config.js --watchAll",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@commitlint/prompt-cli": "11.0.0",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "@typescript-eslint/typescript-estree": "4.6.0",
    "esbuild": "0.8.1",
    "eslint": "7.12.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-security": "1.4.0",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.3",
    "tslib": "2.0.3",
    "typescript": "4.0.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
